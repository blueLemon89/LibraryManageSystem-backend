<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="lm.libraryManagementSystem.mapper.RoleMapper">

    <select id="findRoleByUsername" resultType="lm.libraryManagementSystem.model.Role">
        select * from role where name = #{name} and deleteFlag = 0
    </select>

    <select id="findRoleByUserId" resultType="lm.libraryManagementSystem.model.Role">
        SELECT r.id, r.name
        FROM roles r
        INNER JOIN users_roles ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>
</mapper>